<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true" internalLogLevel="Trace"
	  internalLogFile="D:\\home\\site\\Logs\\internal_log.txt">

	<targets>
		<target name="logfile" xsi:type="File"
				fileName="D:\\home\\site\\Logs\\|${shortdate}_LogFile.txt"
				layout="${longdate} |${level:uppercase=true}|${message}"/>
		<target name="ownFile-Web" xsi:type="File"
				fileName="D:\\home\\site\\Logs\\${shortdate}_logfile.txt"
				layout="${longdate} | ${event-properties:item=EventId_Id}|${uppercase:${level}} | ${logger}|${message} | ${exception:format:tostring}
				| url:${aspnet-request-url}|action:${asp-mvc-action}"/>

	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeto="logfile"/>
		<logger name ="Microsoft.*" maxlevel="info" final="true"/>
		<logger name="*" minlevel="Trace" writeto="ownFile-Web"/>
	</rules>

</nlog>